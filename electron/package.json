{
  "name": "jira-logger-desktop",
  "version": "2.0.0",
  "description": "JIRA Logger Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.jiralogger.app",
    "productName": "JIRALogger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "jira_logger.exe",
      "config.template.json"
    ],
    "asarUnpack": [
      "jira_logger.exe",
      "config.template.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "pepe.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "installer.nsh"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ianmooonee",
        "repo": "jira-logger"
      }
    ]
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
